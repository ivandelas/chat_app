<div class="ui comments">
  <h3 class="ui dividing header">Messages</h3>
  <%= render @messages %>
  <%= form_for(@message, html: { class: 'ui reply form' }) do |f| %>
    <div class="field">
      <%= f.text_area :body %>
    </div>
    <%= f.button(class: 'ui blue labeled submit icon button') do %>
      <i class="icon edit"></i>
      Send Message
    <% end %>
  <% end %>
</div>

