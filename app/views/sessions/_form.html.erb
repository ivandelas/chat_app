<%= form_for(:credentials, url: login_path, html: { class: 'ui form' }) do |f| %>
  <div class="field">
    <%= f.label :name, 'User name' %>
    <div class="ui left icon input">
      <%= f.text_field :name, placeholder: 'Magician23', required: true %>
      <i class="user icon"></i>
    </div>
  </div>
  <div class="field">
    <%= f.label :password %>
    <div class="ui left icon input">
      <%= f.password_field :password, required: true %>
      <i class="lock icon"></i>
    </div>
  </div>
  <%= f.submit 'Login', class: 'ui blue submit button' %>
<% end %>

